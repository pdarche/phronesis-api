<script id="research_paper_template" type="text/x-handlebars-template">
	{{#each papers}}
	<div id="{{this._id}}" class="paper">
		<p class="edit">Edit</p>
  		<div class="section">
	  		<h5>Title</h5>
	  		<a href="{{this.url}}" target="_blank">
	  			<h4>{{this.title}}</h4>
	  		</a>
	  	</div>
  		<div class="section keywords-list">
  			<h5>Keywords</h5>
		  	<ul class="keywords tag-list">
		  		{{#each this.keywords}}
		  			<li class="keyword">
		  				<span>{{this}}</span>
		  				<span class="remove hidden">x</span>
		  			</li>
		  		{{/each}}
		  	</ul>
		</div>
		<div class="section adjectives-list">
			<h5>Phronesis Adjectives</h5>
			<ul class="adjectives tag-list">
		  		{{#each this.adjectives}}
		  			<li class="adjective">
		  				<span>{{this}}</span>
		  				<span class="remove hidden">x</span>
		  			</li>
		  		{{/each}}
		  	</ul>
		</div>
		<div class="section abstract">
			<h5>Abstract</h5>
			<p class="abstract-text">{{this.abstract}}</p>
		</div>
  	</div>
  	{{/each}}
</script>